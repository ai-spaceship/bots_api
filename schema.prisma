datasource db {
  // could be postgresql or mysql
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model Bot {
  id            String   @id
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  username      String
  email_id      String
  bot_username  String
  password      String
  api_key       String
  type          String
  name          String
  desc          String
  profile_photo String?
  access_token  String
  publish       Boolean
  tags          String[]
  avatar_mxc    String?
  prompt        String?
  llmModel      String?
  category      String?  @default("fun")
}

model Workflow {
  id            String  @id
  username      String
  yaml          String
  count         Int
}

model User {
  id            String  @id
  api_key       String 
  email_id      String
}